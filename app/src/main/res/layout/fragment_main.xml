<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#038CCC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ImageButton
                android:id="@+id/ib_query"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/query"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/e"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/ib_hot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/hot"/>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_below="@+id/rl_title"
            android:background="@drawable/ad"/>
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/line"/>

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:scaleType="fitXY"
                android:background="@drawable/parent" />
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="80dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:background="@drawable/children" />
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="80dp"
                android:scaleType="fitXY"
                android:background="@drawable/bitpeo" />
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="80dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:background="@drawable/bigchild" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/iv_videorec"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/videorec" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/iv_videorec"
                android:background="@drawable/titlebox"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            >
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@drawable/video"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@drawable/video"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>